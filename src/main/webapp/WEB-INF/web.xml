<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Main</servlet-name>
        <servlet-class>com.epam.mysite.engine.webservice.servlets.content.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>About-Us</servlet-name>
        <servlet-class>com.epam.mysite.engine.webservice.servlets.content.AboutUsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>About-Us</servlet-name>
        <url-pattern>/about-us</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Contacts</servlet-name>
        <servlet-class>com.epam.mysite.engine.webservice.servlets.content.ContactsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Contacts</servlet-name>
        <url-pattern>/contacts</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Header</servlet-name>
        <servlet-class>com.epam.mysite.engine.webservice.servlets.content.HeaderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Header</servlet-name>
        <url-pattern>/header</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Language</servlet-name>
        <servlet-class>com.epam.mysite.engine.webservice.servlets.content.LanguageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Language</servlet-name>
        <url-pattern>/language</url-pattern>
    </servlet-mapping>
</web-app>